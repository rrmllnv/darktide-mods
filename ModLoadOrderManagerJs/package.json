{
  "name": "darktide-mod-load-order-manager",
  "version": "1.0.0",
  "description": "Программа для управления порядком загрузки модов Warhammer 40,000: Darktide",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:dir": "electron-builder --dir"
  },
  "keywords": [
    "darktide",
    "mods",
    "manager"
  ],
  "author": "Rifat Mullaianov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rrmllnv/darktide-mods.git"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.modloadordermanager.app",
    "productName": "Darktide Mod Load Order Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.git/**/*",
      "!*.bat",
      "!*.md",
      "!README*",
      "!.gitignore",
      "!.gitattributes"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName} Setup.${ext}"
    }
  }
}
